<script type='text/javascript'>
$(function() {
  Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":1,"size_y":1},{"col":2,"row":1,"size_x":1,"size_y":1},{"col":3,"row":1,"size_x":2,"size_y":1},{"col":1,"row":3,"size_x":1,"size_y":1},{"col":2,"row":3,"size_x":1,"size_y":1},{"col":3,"row":3,"size_x":1,"size_y":1},{"col":4,"row":2,"size_x":1,"size_y":1},{"col":1,"row":2,"size_x":2,"size_y":1},{"col":4,"row":3,"size_x":1,"size_y":1},{"col":3,"row":2,"size_x":1,"size_y":1}]')
  })
  Dashing.widget_base_dimensions = [330, 300]
  Dashing.numColumns = 4
</script>

<% content_for :title do %>Raspberry Dashboard<% end %>
<div class="gridster" style="overflow: hidden;">
  <ul>
    <li data-row="0" data-col="0" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png" style="background-color: white;"></div>
    </li>
    <li data-row="0" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="fa fa-clock-o icon-background"></i>
    </li>
    <li data-row="0" data-col="2" data-sizex="2" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Bonjour" data-text="Bienvenue sur Raspberry Pi B+" data-moreinfo="Protip: You can drag the widgets around!"></div>
    </li>
    <li data-row="1" data-col="0" data-sizex="1" data-sizey="1">
      <div data-id="server_status" data-view="ServerStatus" data-title="Server Status"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cpu" data-view="Number" data-suffix="%" data-title="CPU Usage"></div>
    </li>
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="disk" data-view="Meter" data-min="0" data-max="100" data-title="Disk Usage"></div>
    </li>
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="updates-available" data-view="Number" data-title="Updates Available"></div>
    </li>
    <li data-row="2" data-col="0" data-sizex="2" data-sizey="1">
      <div data-id="network" data-view="Text" data-title="Network"></div>
    </li>
    <li data-row="2" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="ram" data-view="Meter" data-min="0" data-max="100" data-title="Memory Usage"></div>
    </li>
    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="clients" data-view="Number" data-title="Network hosts"></div>
    </li>
  </ul>
</div>